{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitOnError": true,
        "lib": [
            "dom",
            "es2015.iterable",
            "es6",
            "es7"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ],
            "~/*": [
                "src/*"
            ]
        },
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}